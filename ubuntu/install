#!/usr/bin/env -S perl ${HOME}/.dotfiles/.meta/install.pl --exec

[run]
# Installing packages
sudo apt install -y
     autorandr
     awesome
     emacs
     fish
     redshift
     rofi
     slock
     tmux
     uswsusp
     vim
     xclip
     xterm

# Allowing everyone to suspend to ram
sudo chmod +s /usr/sbin/s2ram
