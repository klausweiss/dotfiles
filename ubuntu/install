#!/usr/bin/env -S perl ${HOME}/.dotfiles/install --file

[run]
# Installing packages
sudo apt install -y
     adwaita-icon-theme-full
     autorandr
     awesome
     emacs
     fish
     i3lock
     kitty
     moreutils
     nemo
     neovim
     redshift
     rofi
     tmux
     tmuxinator
     uswsusp
     vim
     xclip
     xss-lock
     xterm

# Allowing everyone to suspend to ram
sudo chmod +s /usr/sbin/s2ram
