[user]
    email =
    name =
[core]
    autocrlf = input
    editor = nvim
[commit]
    gpgSign = true
[tag]
    gpgSign = true
[push]
    default = matching
[alias]
    ignore = "!gi() { curl -L -s https://www.gitignore.io/api/$@ ;}; gi"
    new = "!gnew() { \
git init; \
touch .gitignore; \
git add .gitignore; \
git commit -m 'Initial commit'; \
if [ $# -gt 0 ]; then \
  git ignore $@ > .gitignore; \
  git commit -am \"Add $@ to .gitignore\"; \
fi; \
}; gnew"
